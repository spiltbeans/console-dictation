{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"module": "ESNext",
		"lib": [
			"DOM",
			"ES2022"
		],
		"moduleResolution": "nodenext",
		"outDir": "dist/mjs",
		"declarationDir": "dist/mjs/types",
		"rootDir": "src",
		"removeComments": true,
		"noImplicitAny": true,
	},
	"include": [
		"src",
		"types.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}