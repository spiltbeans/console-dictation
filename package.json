{
	"name": "console-dictation",
	"version": "1.3.1",
	"description": "A method to dictate console reports to persistent files",
	"main": "./dist/mjs/index.mjs",
	"types": "./dist/mjs/types/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/mjs/types/index.d.ts",
				"default": "./dist/mjs/index.mjs"
			},
			"require": {
				"types": "./dist/cjs/types/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"build": "npm run clean && npm run build:mjs && npm run build:cjs",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:mjs": "rollup --bundleConfigAsCjs --config rollup.config.js",
		"prepack": "npm i && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/spiltbeans/console-dictation.git"
	},
	"keywords": [
		"log",
		"logger",
		"logging",
		"sysadmin",
		"syslog",
		"tools",
		"persistent",
		"persistent logs",
		"node"
	],
	"author": "Eyas Valdez (https://github.com/spiltbeans)",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/spiltbeans/console-dictation/issues"
	},
	"homepage": "https://github.com/spiltbeans/console-dictation#readme",
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.1.1",
		"@types/node": "^20.2.5",
		"rollup": "^3.24.1",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3"
	}
}
