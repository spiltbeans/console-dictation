{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ES6",
			"DOM"
		],
		"target": "ES6",
		"module": "CommonJS",
		"rootDir": "src",
		"moduleResolution": "node",
		"outDir": "dist/cjs",
		"declarationDir": "dist/cjs/types",
		"removeComments": true,
		"noImplicitAny": true,
	},
	"include": [
		"src",
		"types.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}